<div class="container">
  <div class="row">
    <div class='col-xs-3'>

<h2>User info</h2>
	<%= attachment_image_tag current_user, :profile_image, :fill, 150, 150, fallback: "no-image.png",size:'150x150' %>

<table class="table table-hover">

  <tbody>
    <tr>
      <td>name</td>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
    	<td>introduction</td>
    	<td><%= current_user.introduction %></td>
    </tr>
  </tbody>
</table>
	
<%= link_to "", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

<br>

<%= render 'layouts/new_book', book: @book %>

</div>

<div class="col-xs-9">
	<h1>Users</h1>
<table class="table table-striped">
		<thead>
			<tr>
				<th><P>image</P></th>
				<th><P>name</P></th>
				<th><P>show</P></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>

			<tr class="new-table">
				<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no-image.png",size:'60x60' %></td>
				<td><%= user.name %></span></td>
				<td><%= link_to "show",user_path(user) %></td>
			</tr>
			<% end %>

		</tbody>
	</table>
</div>
</div>
